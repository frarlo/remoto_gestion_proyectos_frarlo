    <menuitem name="Gestión de Proyectos" id="gestion_proyectos.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Proyecto" id="gestion_proyectos.menu_1" parent="gestion_proyectos.menu_root"/>
