    <menuitem name="Editar" id="gestion_proyectos.menu_2_list" parent="gestion_proyectos.menu_1"
              action="gestion_proyectos.action_window"/>
    <menuitem name="Comprobar" id="gestion_proyectos.menu_3_list" parent="gestion_proyectos.menu_1"
