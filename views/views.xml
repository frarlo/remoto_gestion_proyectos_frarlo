    <!-- Top menu item -->

    <menuitem name="Gestión de Proyectos" id="gestion_proyectos.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Proyecto" id="gestion_proyectos.menu_1" parent="gestion_proyectos.menu_root"/>
<!--<menuitem name="Menu 2" id="gestion_proyectos.menu_2" parent="gestion_proyectos.menu_root"/>
-->
    <!-- actions -->

    <menuitem name="Crear" id="gestion_proyectos.menu_1_list" parent="gestion_proyectos.menu_1"
              action="gestion_proyectos.action_window"/>
    <menuitem name="Editar" id="gestion_proyectos.menu_2_list" parent="gestion_proyectos.menu_1"
              action="gestion_proyectos.action_window"/>
    <menuitem name="Comprobar" id="gestion_proyectos.menu_3_list" parent="gestion_proyectos.menu_1"
              action="gestion_proyectos.action_window"/>
    <menuitem name="Eliminar" id="gestion_proyectos.menu_4_list" parent="gestion_proyectos.menu_1"
              action="gestion_proyectos.action_window"/>
